<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.it4i.fiji.hpc_workflow.ui.AboutViewController">
   <center>
      <GridPane>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="About HPC-ParallelTools" GridPane.columnIndex="1">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <Hyperlink onAction="#openMainWebSite" text="Main Website" textFill="BLUE" visited="true" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font size="20.0" />
               </font>
               <tooltip>
                  <Tooltip text="The main website is a good starting point where you can find more information such as video tutorials and links." />
               </tooltip>
            </Hyperlink>
            <Hyperlink onAction="#openShortGuide" text="Short Guide" textFill="BLUE" visited="true" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <font>
                  <Font size="20.0" />
               </font>
               <tooltip>
                  <Tooltip text="A series of worksheets which will guide you though all of the available features of HPC-ParallelTools step-by-step in a hands on manner." />
               </tooltip>
            </Hyperlink>
            <Hyperlink onAction="#openAvailableFunctions" text="Available Functions" textFill="BLUE" visited="true" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <font>
                  <Font size="20.0" />
               </font>
               <tooltip>
                  <Tooltip text="An index of all available parallelization and progress reporting functions added to the macro language by HPC-ParallelTools." />
               </tooltip>
            </Hyperlink>
            <Hyperlink onAction="#openExamples" text="Examples" textFill="BLUE" visited="true" GridPane.columnIndex="1" GridPane.rowIndex="4">
               <font>
                  <Font size="20.0" />
               </font>
               <tooltip>
                  <Tooltip text="A directory which contains example macros, each in its own subdirectory." />
               </tooltip>
            </Hyperlink>
            <Hyperlink onAction="#openReportIssue" text="Report Issue" textFill="BLUE" visited="true" GridPane.columnIndex="1" GridPane.rowIndex="5">
               <font>
                  <Font size="20.0" />
               </font>
               <tooltip>
                  <Tooltip text="If you are facing an issue with HPC-ParallelTools report it at this location. Include all relevant information in your report." />
               </tooltip>
            </Hyperlink>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </GridPane>
   </center>

</fx:root>
